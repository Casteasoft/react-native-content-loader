    "ios",
    "android"
  ],
  "bugs": {
    "url": "https://github.com/casteasoft/react-native-content-loader/issues"
  },
  "homepage": "https://github.com/casteasoft/react-native-content-loader#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "7.19.3",
